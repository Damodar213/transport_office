# Database Configuration
# Required for full functionality
DATABASE_URL=postgresql://username:password@localhost:5432/transport_office

# Cloudflare R2 Configuration (Optional - for file uploads)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name_here
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.your-account-id.r2.cloudflarestorage.com

# Application Configuration
# IMPORTANT: Update this with your deployed URL when deploying
# This URL will be included in WhatsApp messages sent to suppliers
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000
NODE_ENV=development

# Authentication Configuration (Optional)
SESSION_MAX_AGE=604800
COOKIE_SECURE=false

# Development Settings
# Set to true to enable debug logging
DEBUG_MODE=false


